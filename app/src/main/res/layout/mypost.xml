<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#fff"
    android:layout_marginBottom="10dp"
    >
    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:id="@+id/post_box"
        android:layout_height="wrap_content"
        tools:context=".controller.fragment.Home_Fragment">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/post_profileimg1"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:src="@drawable/nature"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/profile_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Samir Karki"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/post_profileimg1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3hr"
            android:textSize="12dp"
            android:textColor="#95989A"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/post_profileimg1"/>
        <TextView
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:background="@drawable/public_icon"
            android:backgroundTint="#95989A"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="75dp"/>
        <Button
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:background="@drawable/toggel_icon"
            android:backgroundTint="#000000"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/post_caption1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:hint="You can give your caption"
            android:text="You can give your caption here "
            android:layout_marginLeft="10dp"
            android:layout_below="@id/post_profileimg1"
            />

        <ImageView
            android:id="@+id/post_image1"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:src="@drawable/nature"
            android:layout_below="@id/post_caption1"
            />
    </RelativeLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="1"
            android:columnCount="2"
            android:layout_below="@id/profile_name"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/button_layout1"
            >
            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:layout_columnWeight="1"
                android:textAllCaps="false"
                android:drawableLeft="@drawable/ic_delete_forever_black_24dp"
                />
            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Update"
                android:layout_columnWeight="1"
                android:textAllCaps="false"
                android:drawableLeft="@drawable/ic_update_black_24dp"
                />
        </GridLayout>

    </LinearLayout>
</LinearLayout>